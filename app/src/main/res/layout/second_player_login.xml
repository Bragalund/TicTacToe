<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_red">

    <LinearLayout
        android:id="@+id/login_second_player_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:text="Player 2"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <AutoCompleteTextView
            android:id="@+id/login_second_player_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
            android:ems="10"
            android:hint="Please enter username..."
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textCursorDrawable="@color/green" />
    </LinearLayout>

    <Switch
        android:id="@+id/AISwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="100dp"
        android:text="AI"
        android:theme="@style/SwitchTheme" />
    <Button
        android:id="@+id/second_player_login_score_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score screen"
        android:layout_above="@+id/login_start_game_button"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/login_start_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="startGame"
        android:text="Start game!" />

</RelativeLayout>